# Local development configuration (without Docker)
# Copy this file to config.yaml when running locally

hosts:
  - name: "server-1"
    hostname: "192.168.1.10"
    port: 22
    username: "root"
    # ssh_key_path: "~/.ssh/id_rsa"

# Use localhost for local development
opensearch:
  hosts:
    - "http://localhost:9200"
  index_prefix: "logscrawler"

collector:
  log_interval_seconds: 30
  metrics_interval_seconds: 15
  log_lines_per_fetch: 500
  retention_days: 7
