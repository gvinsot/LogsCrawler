# LogsCrawler Agent Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    procps \
    curl \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install AMD ROCm SMI for GPU monitoring
# ROCm repository setup for Debian/Ubuntu
RUN curl -fsSL https://repo.radeon.com/rocm/rocm.gpg.key | gpg --dearmor -o /usr/share/keyrings/rocm-archive-keyring.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/rocm-archive-keyring.gpg] https://repo.radeon.com/rocm/apt/latest jammy main" > /etc/apt/sources.list.d/rocm.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends rocm-smi-lib \
    && rm -rf /var/lib/apt/lists/*

# Add ROCm to PATH
ENV PATH="/opt/rocm/bin:${PATH}"
ENV LD_LIBRARY_PATH="/opt/rocm/lib:/opt/rocm/lib64:${LD_LIBRARY_PATH}"

# Install Python dependencies
COPY agent/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy agent code
COPY agent/ ./agent/

# Environment variables (override at runtime)
ENV AGENT_AGENT_ID=agent-default
ENV AGENT_BACKEND_URL=http://localhost:8000
ENV AGENT_OPENSEARCH__HOSTS=["http://localhost:9200"]
ENV AGENT_DOCKER_URL=unix:///var/run/docker.sock
ENV AGENT_LOG_LEVEL=INFO

# Run the agent
CMD ["python", "-m", "agent.main"]
